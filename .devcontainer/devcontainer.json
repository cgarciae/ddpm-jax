{
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--privileged",
        "--volume=/tmp/.X11-unix:/tmp/.X11-unix",
        "--volume=/data/cristian/elegy:/workspaces/elegy",
        "--volume=/data/cristian/treex:/workspaces/treex",
        "--volume=/data/cristian/treeo:/workspaces/treeo",
        "--volume=/data/cristian/jax-metrics:/workspaces/jax-metrics",
    ],
    "postCreateCommand": [
        "bash",
        "./.devcontainer/postCreateCommand.sh"
    ],
    "mounts": [],
    "remoteEnv": {
        "DISPLAY": ":1",
        "QT_X11_NO_MITSHM": "1",
    },
    "extensions": [
        "ms-python.python",
        "github.copilot"
    ]
}